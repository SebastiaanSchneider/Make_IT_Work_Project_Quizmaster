<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CreateUpdateQuestionController">

    <!-- header -->
    <Label layoutX="51.0" layoutY="50.0" text="Vraagbeheer">
        <font>
            <Font size="18.0" />
        </font>
    </Label>
    <Label fx:id="nameRoleLabel" layoutX="701.0" layoutY="14.0" prefHeight="66.0" prefWidth="185.0" text="Naam">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <Label layoutX="284.0" layoutY="112.0" prefHeight="27.0" prefWidth="179.0" text="Voer gegevens in">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <!-- question -->
    <Label layoutX="225.0" layoutY="163.0" text="Vraag:">
      <font>
         <Font size="14.0" />
      </font></Label>
    <TextArea fx:id="questionTextArea" layoutX="285.0" layoutY="163.0" prefHeight="60.0" prefWidth="320.0" wrapText="true" />

    <!-- answers -->
    <Label layoutX="153.0" layoutY="244.0" text="Correct antwoord:">
      <font>
         <Font size="14.0" />
      </font></Label>
    <TextField fx:id="correctAnswerField" layoutX="285.0" layoutY="241.0" prefHeight="26.0" prefWidth="320.0" />

    <Label layoutX="132.0" layoutY="289.0" text="Incorrect antwoord 1:">
      <font>
         <Font size="14.0" />
      </font></Label>
    <TextField fx:id="incorrectAnswer1Field" layoutX="285.0" layoutY="286.0" prefHeight="26.0" prefWidth="320.0" />

    <Label layoutX="129.0" layoutY="335.0" text="Incorrect Antwoord 2 :">
      <font>
         <Font size="14.0" />
      </font></Label>
    <TextField fx:id="incorrectAnswer2Field" layoutX="285.0" layoutY="332.0" prefHeight="26.0" prefWidth="320.0" />

    <Label layoutX="129.0" layoutY="380.0" text="Incorrect Antwoord 3 :">
      <font>
         <Font size="14.0" />
      </font></Label>
    <TextField fx:id="incorrectAnswer3Field" layoutX="285.0" layoutY="376.0" prefHeight="26.0" prefWidth="320.0" />

    <!-- buttons -->
    <Button layoutX="428.0" layoutY="460.0" onAction="#doCreateUpdateQuestion" text="Opslaan" />
    <Button layoutX="557.0" layoutY="460.0" onAction="#goBackToPreviousPage" text="Terug" />
    <Button layoutX="822.0" layoutY="82.0" mnemonicParsing="false" onAction="#doMenu" text="Menu">
        <font>
            <Font size="14.0" />
        </font>
    </Button>
</AnchorPane>
